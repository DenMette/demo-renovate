{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "after 11pm and before 2am every weekday", "every weekend"
  ],
  "timezone": "GMT",
  "assignees": ["DenMette"],
  "prConcurrentLimit": 4,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "pr-comment"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
